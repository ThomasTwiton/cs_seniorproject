@model server.Models.EnsembleModel;

@{
    ViewData["Title"] = "Edit Ensemble";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Stylesheets {
    <link rel="stylesheet" href="~/css/create.css" />
}


@* Title Row *@
<div id="titleRow" class="row">
    <h2 style="float:left;">Create Profile</h2>
    <button style="float:right;" class="btn btn-danger" onclick="submitForm()">Save Changes</button>
    <hr style="width:100%;" />
</div>

@* Profile Type Row *@
<div id="profRow" class="row">
    @*<div id="active" class="col-xs-4 align-middle p" onclick="switchView('profile')">*@
    <div class="col-xs-4 p" >
        <div class="col-xs-3">
            <span class="glyphicon glyphicon-user"></span>
        </div>
        <div class="col-xs-9">
            Profile<br />
            A personal profile
        </div>
    </div>

    <div id="active" class="col-xs-4 e" >
        <div class="col-xs-3">
            <span class="glyphicon glyphicon-cd"></span>
        </div>
        <div class="col-xs-9">
            Ensemble<br />
            A profile for your group
        </div>
    </div>
    <div class="col-xs-4 v" >
        <div class="col-xs-3">
            <span class="glyphicon glyphicon-home"></span>
        </div>
        <div class="col-xs-9">
            Venue<br />
            A profile for your business
        </div>
    </div>


</div>

@* Information Row *@
<div id="infoRow" class="row">
    <!-- Ensemble form -->
    <form id="ensembleForm" asp-action="EditEnsemble" enctype="multipart/form-data">
        <div style="display:none">
            <input asp-for=Ensemble.EnsembleId type="text" />
        </div>
        <div class="col-xs-6">
            <div class="form-group row">
                <div class="col-xs-12">
                    <label asp-for=Ensemble.Ensemble_Name>Name<span class="red-ast">*</span></label>
                    <input asp-for=Ensemble.Ensemble_Name type="text" class="form-control" placeholder="Name of Ensemble" required />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-xs-6">
                    <label asp-for=Ensemble.Formed_Date>Formed<span class="red-ast">*</span></label>
                    <input asp-for=Ensemble.Formed_Date type="date" class="form-control" required />
                </div>
                <div class="col-xs-6">
                    <label asp-for=Ensemble.Disbanded_Date>Disbanded</label>
                    <input asp-for=Ensemble.Disbanded_Date type="date" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-xs-8">
                    <label asp-for=Ensemble.City>City<span class="red-ast">*</span></label>
                    <input asp-for=Ensemble.City type="text" class="form-control" placeholder="Where are you based out of?" required />
                </div>
                <div class="col-xs-4">
                    <label asp-for=Ensemble.State>State<span class="red-ast">*</span></label>
                    <input asp-for=Ensemble.State type="text" class="form-control" placeholder="Ss" required />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="File" class="control-label">Profile Picture</label>
                <input asp-for="File" type="file" class="form-control" />
            </div>
        </div>

        <div class="col-xs-6">
            <div class="row form-group">
                <div class="col-xs-6">
                    <label asp-for=Ensemble.Type>Ensemble Type<span class="red-ast">*</span></label>
                    <input asp-for=Ensemble.Type type="text" class="form-control" placeholder="Cover Band, String Quartet, Garage Band..." required />
                </div>
                <div class="col-xs-6">
                    <label asp-for=Ensemble.Genre>Genre<span class="red-ast">*</span></label>
                    <input asp-for=Ensemble.Genre type="text" class="form-control" placeholder="Hip-Hop, Rock, 80's Pop..." required />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-xs-12">
                    <label asp-for=Ensemble.Bio>Bio<span class="red-ast">*</span></label>
                    <textarea asp-for=Ensemble.Bio type="text" class="form-control" placeholder="Who are you? What is your brand?" required></textarea>
                </div>
            </div>
        </div>
    </form>

    
</div>

